<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="2dp"
            android:text="Phone Number"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/order_total_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Maid's Salary"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_below="@+id/order_phone_number"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address, City"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_below="@+id/order_total_salary"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_below="@+id/order_address_city"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_maid_assigning_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assigning Date for Starting work"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_below="@+id/order_date_time"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/show_all_about_hire_maid_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Show This Order Maid"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/white"
            android:layout_below="@id/order_maid_assigning_date"
            />

    </RelativeLayout>

</RelativeLayout>