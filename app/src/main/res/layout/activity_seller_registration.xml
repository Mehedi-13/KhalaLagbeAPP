<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerRegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
        android:id="@+id/img_seller"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/title_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maid's Registration Form"
        android:gravity="center"
        android:layout_below="@+id/img_seller"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_dark"
        />
    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/title_seller"
        android:hint="Name..."
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_name"
        android:hint="Phone Number..."
        android:inputType="phone"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_phone"
        android:hint="Password..."
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_permanentAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_password"
        android:hint="Permanent Address..."
        android:scrollbars="vertical"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_presentAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_permanentAddress"
        android:hint="Present Address..."
        android:scrollbars="vertical"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        />
            <EditText
                android:id="@+id/seller_identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/seller_presentAddress"
                android:hint="Number of NID/Birth certificate/Passport"
                android:scrollbars="vertical"
                android:inputType="text"
                android:textSize="16dp"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/seller_working_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/seller_identity"
                android:hint="Maid's Working Area"
                android:scrollbars="vertical"
                android:inputType="text"
                android:textSize="16dp"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                />
    <Button
        android:id="@+id/seller_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_working_area"
        android:text="Register"
        android:textSize="18dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/white"
        android:textAllCaps="false"
        />
