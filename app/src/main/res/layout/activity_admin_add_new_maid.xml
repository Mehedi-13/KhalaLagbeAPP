<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminAddNewMaidActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >





            <TextView
                android:id="@+id/infoPic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Give Maid's (NID/Birth Certificate/Passport) Picture:"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:padding="8dp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/select_maid_info_image1"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_below="@+id/infoPic1"
                android:scrollbars="vertical"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/select_product_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                />

            <EditText
                android:id="@+id/maid_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_maid_info_image1"
                android:inputType="textMultiLine"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:scrollbars="vertical"
                android:hint="Maid's Name ; Present Address..."

                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                />

            <EditText
                android:id="@+id/maid_present_Address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/maid_name1"
                android:inputType="textMultiLine"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textSize="14sp"
                android:hint="Maid's Working Area..."
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                />
            <EditText
                android:id="@+id/maid_phone_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/maid_present_Address1"
                android:inputType="phone"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textSize="14sp"
                android:hint="Maid's Phone Number..."
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                />


            <EditText
                android:id="@+id/maid_description1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="8dp"
                android:layout_below="@id/maid_phone_number1"
                android:layout_marginLeft="45dp"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:scrollbars="vertical"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Maid's Description here..."
                android:inputType="textMultiLine" />
            <TextView
                android:id="@+id/info_notic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Give Salary without Any Space(Before or After) Ex:123"
                android:textAllCaps="false"
                android:layout_below="@+id/maid_description1"
                android:textSize="12sp"
                android:padding="8dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/maid_price_category11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_notic1"
                android:layout_marginLeft="15dp"

                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:scrollbars="vertical"
                android:background="@drawable/input_design"
                android:hint="1st Salary"
                android:inputType="phone" />

            <EditText
                android:id="@+id/maid_price_category21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@id/info_notic1"
                android:layout_marginLeft="120dp"
                android:hint="2nd Salary"
                android:scrollbars="vertical"
                android:background="@drawable/input_design"
                android:inputType="phone"
                android:layout_marginRight="5dp"
                />

            <EditText
                android:id="@+id/maid_price_category31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_notic1"
                android:layout_marginLeft="230dp"
                android:hint="3rd Salary"
                android:padding="8dp"
                android:inputType="phone"
                android:scrollbars="vertical"
                android:background="@drawable/input_design"


                />

            <Button
                android:id="@+id/add_new_maid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maid_price_category11"
                android:text="Add Maid"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/buttons"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>