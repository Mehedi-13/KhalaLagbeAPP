<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:orientation="vertical"
    tools:context=".ConfirmFinalHireActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:padding="10dp"
                android:text="Please confirm your Consignment Details"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/consignment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:hint="Your Name (Mr. Karim / Mst. Shima)"
                android:inputType="text"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/consignment_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/consignment_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Your Phone Number (017XXXXXXXX)"
                android:inputType="number"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/consignment_working_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/consignment_phone_number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Give the date for assign this maid to work."
                android:inputType="text"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/consignment_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/consignment_working_date"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Your Present Address(Shukrabad,House29)"
                android:inputType="text"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/consignment_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/consignment_address"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Your City Name (Dhaka)"
                android:inputType="text"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16dp" />

            <Button
                android:id="@+id/confirm_final_hire_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary"
                android:text="Confirm"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

