<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">




    
    <RelativeLayout
        android:id="@+id/r777"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>





    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Write your Phone Number"
        android:padding="14dp"
        android:inputType="phone"
        android:layout_below="@id/r777"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/answer_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions?"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="35dp"
        />
    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Whats your grandfather's name?"
        android:padding="14dp"
        android:inputType="text"
        android:layout_below="@id/answer_question"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        />
    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="whats your favourite Place?"
        android:padding="14dp"
        android:inputType="text"
        android:layout_below="@id/question_1"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_below="@id/question_2"
        android:background="@drawable/buttons"
        android:layout_margin="15dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />




</RelativeLayout>